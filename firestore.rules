rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated (not guest)
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User profiles - anyone can read, only owners can write
    match /users/{userId} {
      allow read: if true; // Anyone can read public profiles
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId);
    }
    
    // Cycles collection
    match /cycles/{cycleId} {
      // Leaderboard - anyone can read
      match /leaderboard/{creatorId} {
        allow read: if true;
        allow write: if false; // Only Cloud Functions can write
      }
      
      // Picks - users can read their own, write their own if authenticated
      match /picks/{userId} {
        allow read: if isOwner(userId);
        allow create, update: if isAuthenticated() && isOwner(userId);
        allow delete: if false; // Prevent deletion
      }
      
      // Cycle winner - read only
      match /cycleWinner/{winnerId} {
        allow read: if true;
        allow write: if false; // Only Cloud Functions
      }
    }
    
    // Game sessions - only Cloud Functions can write
    match /gameSessions/{sessionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Only Cloud Functions
    }
    
    // Game results - users can read their own
    match /gameResults/{resultId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow write: if false; // Only Cloud Functions
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
